{
  "listen": ":8080",
  "data_dir": "~/.mcpproxy",
  "enable_tray": true,
  "top_k": 5,
  "tools_limit": 15,
  "tool_response_limit": 20000,

  "llm": {
    "provider": "anthropic",
    "model": "claude-3-5-sonnet-20241022",
    "anthropic_api_key": "sk-ant-YOUR-KEY-HERE",
    "temperature": 0.7,
    "max_tokens": 2000
  },

  "mcpServers": [
    {
      "name": "example-server",
      "url": "http://localhost:3001",
      "protocol": "http",
      "enabled": true,
      "quarantined": false
    }
  ]
}
