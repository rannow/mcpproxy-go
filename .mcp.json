        "claude-flow@alpha",
        "mcp",
        "start"
      ],
      "description": "Primary orchestration server with SPARC methodology, 54 agents, swarm coordination, and hooks automation",
      "capabilities": [
        "swarm-orchestration",
        "agent-spawning",
        "task-coordination",
        "memory-management",
        "neural-patterns",
        "performance-tracking",
        "github-integration",
        "hooks-automation"
      ],
      "priority": 1
    },
    "flow-nexus": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "flow-nexus@latest",
        "mcp",
        "start"
      ],
      "description": "Cloud-based AI swarm deployment with 70+ tools, sandboxes, neural networks, and real-time collaboration",
      "capabilities": [
        "cloud-execution",
        "sandbox-management",
        "neural-networks",
        "template-deployment",
        "github-automation",
        "real-time-streaming",
        "storage-management",
        "authentication"
      ],
      "priority": 2
    },
    "ruv-swarm": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "ruv-swarm",
        "mcp",
        "start"
      ],
      "description": "Enhanced swarm coordination with advanced consensus mechanisms and distributed systems",
      "capabilities": [
        "advanced-coordination",
        "consensus-protocols",
        "distributed-systems",
        "collective-intelligence",
        "swarm-memory"
